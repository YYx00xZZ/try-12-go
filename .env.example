# HTTP server configuration
PORT=8080

# Persistence backend: choose "postgres" for SQL (default) or "mongo" for MongoDB
DB_BACKEND=postgres

# Postgres connection details (used when DB_BACKEND=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mydb
# DSN consumed by the app and migrations; keep in sync with the fields above
DATABASE_URL=postgres://postgres:postgres@localhost:5432/mydb?sslmode=disable

# MongoDB connection details (used when DB_BACKEND=mongo)
MONGO_URI=mongodb://localhost:27017
MONGO_DB=mydb
MONGO_COLLECTION=users
MONGO_PORT=27017
